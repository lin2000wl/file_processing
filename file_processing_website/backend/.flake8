[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    W504   # line break after binary operator
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    migrations,
    .tox
per-file-ignores = 
    __init__.py:F401
max-complexity = 10 